{
  "name": "xed",
  "displayName": "Xed",
  "version": "1.0.0",
  "description": "Linux Mint text editor with file restoration from window title",
  "wmClass": ["xed", "Xed"],
  "type": "text-editor",
  "handler": "index.js",

  "launch": {
    "executables": ["xed"],
    "flags": [],
    "conditionalFlags": {}
  },

  "features": {
    "isSingleInstance": false,
    "timeout": 45000,
    "gracePeriod": 30000,
    "needsTitleParsing": true
  },

  "titlePatterns": {
    "skipPatterns": ["untitled", "unsaved", "new file", "unbenannt", "neu"],
    "fullPathRegex": "^(/[^\\s]+\\.[a-zA-Z0-9]+)\\s*-\\s*",
    "filenameRegex": "^([^\\s/]+\\.[a-zA-Z0-9]+)\\s*[~()]*\\s*-\\s*"
  }
}
